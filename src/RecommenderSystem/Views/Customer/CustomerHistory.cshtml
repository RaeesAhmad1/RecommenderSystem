        #${v.InvoiceID}
      </a>
   </td>
   <td>${v.InvoiceDate}</td>
   <td>${v.OrderDate}</td>
<td>
`;
                if (v.PaymentMethod = "Cheque") {
                    data += `<a href="#/" data-id="${v.ChequeID}">`;
                    if (v.Cleared = "False") {
                        data += "<span style='color:red'>Cheque UnCleared</span>";
                    } else {
                        data += "<span style='color:green'>Cheque Cleared</span>";
                    }
                    data += `</a>`;
                } else {
                    data += v.PaymentMethod;
                }


                data += "</td>";
                data +=`<td>${v.Amount}</td>`;
                data += `</tr>`;

            });
            $("#CustomerHistoryBody").html(data);
        });
    }


