    @RenderSection("Scripts", false)
    <script>
    var user = @Html.Raw(Json.Encode(Session["User"]));
    $.fn.editable.defaults.mode = 'inline';
    $('#category').editable({
        type: "select",
        prepend: "not selected",
        source: [
            @foreach (var item in repo.GetList())
                {
                    @Html.Raw($"{{value : {item.ID}, text : '{item.Name}' }},");
                }
        ],
        success: function(i, v) {
            $("#CategoryId").val(v);
        }
    });
    $("#CostFrom").editable({
        type: "text",
        success: function(i, v) {
            $("#PriceFrom").val(v);
        }
    });
    $("#CostTo").editable({
        type: "text",
        success: function (i, v) {
            $("#PriceTo").val(v);
        }
    });

    $(".btn-wishlist1").unbind().click(function () {
        var el = this;
        var productId = $(el).data("prod-id");
        if (user == null) {
            $("#LoginModal").modal("show");
        } else {
            $(el).addClass("load-more-overlay loading");
            $.post("@Url.Action("AddToWishList", "Home")",{productId : productId} ,function(resp) {
                if (resp == false) {
                    bootbox.alert("Unable to add to wishlist");
                } else {
                    $(el).removeClass("w-icon-heart");
                    $(el).addClass("added w-icon-heart-full");
                }
                $(el).removeClass("load-more-overlay loading");
            });
        }
    });


    </script>
