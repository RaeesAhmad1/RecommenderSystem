@model IEnumerable<InventoryManagement.ViewModels.Category_LV>


<div id="datatable-responsive_wrapper" class="dataTables_wrapper form-inline">
    <table id="datatable-responsive" class="table table-striped table-bordered responsive no-wrap DataTable" role="grid" aria-describedby="datatable-responsive_info" style="width: 100%;" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Total Products</th>
                <th>Sellable Items</th>
                <th>Labor Meterial</th>
                <th>Raw Meterial</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var element in Model)
            {
            <tr>
                <td>@element.Name</td>
                <td>@element.Description</td>
                <td>@element.TotalProducts</td>
                <td>@(element.Sellable ? "Yes" : "No" )</td>
                <td>@(element.LaborMeterial ? "Yes" : "No" )</td>
                <td>@(element.RawMeterial ? "Yes" : "No" )</td>
                <td>
                    <a class="EditCategoryBtn" data-id="@element.ID" data-name="@element.Name" data-description="@element.Description" data-Sellable="@element.Sellable" data-labormeterial="@element.LaborMeterial" data-rawmeterial="@element.RawMeterial" href="#/"><i class="glyph-icon tooltip-button icon-pencil-square-o" style="color:blue" title="" data-original-title=".icon-pencil-square-o" aria-describedby="tooltip854738"></i></a>
                    <a class="DeleteCategoryBtn" data-id="@element.ID" href="#/"><i class="glyph-icon tooltip-button icon-trash" style="color:red" title="" data-original-title="Delete" aria-describedby="tooltip991223"></i></a>
                </td>
            </tr>
            }

        </tbody>
    </table>
</div>